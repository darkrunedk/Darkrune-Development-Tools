<Page x:Class="Darkrune_Development_Tools.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Darkrune_Development_Tools.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Page.Content>
        <Grid Style="{StaticResource GridPageStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource WarningHeader}" Text="This tool is very early in development and might not have a lot of uses for now." />


            <StackPanel Grid.Row="1">
                <TextBlock Text="To use the tools, select the tool you want to use from the Tools menu." />
                <TextBlock>
                    <Run Text="Available tools:" />
                    <LineBreak />
                    <Run Text="Devops settings - Useful for exporting settings from web.config/appsettings.json files to DevOps" />
                    <LineBreak />
                    <Run Text="String manipulation - Useful for formatting text like a list of ids to a comma seperated string used in SQL" />
                </TextBlock>
            </StackPanel>
        </Grid>
    </Page.Content>
</Page>
